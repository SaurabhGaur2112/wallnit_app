<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColorDefault"
    tools:context="com.wallnit.wallnitlogin.ForgetPassword_StepOne">

    <TextView
        android:id="@+id/forget_password_stepone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continuetxt"
        style="@style/signup_title_styles"
        />

    <ProgressBar
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/progressBar_firststepforget"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:visibility="gone"
        android:layout_alignRight="@+id/forget_password_stepone"
        android:layout_alignEnd="@+id/forget_password_stepone" />

    <ImageView
        android:id="@+id/wallnit_forget_icon"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="80sp"
        android:layout_below="@id/forget_password_stepone"
        android:src="@drawable/wallnit_icon"
        />

    <TextView
        android:id="@+id/forget_passwordfirst_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallnit_forget_icon"
        style="@style/forget_password_title"
        />

    <TextView
        android:id="@+id/forget_password_first_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_passwordfirst_title"
        style="@style/forget_password_description"
        />

    <EditText
        android:id="@+id/forget_password_enteremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_password_first_desc"
        style="@style/forgetpassword_edittext"
        android:hint="@string/forget_password_step_first"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/forget_login_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_login_btn"
        style="@style/signup_asuser_textbottom"
        />

    <TextView
        android:id="@+id/forget_terms_ofservice_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_service"
        style="@style/signup_ascircle_textbottom"
        />


</RelativeLayout>
