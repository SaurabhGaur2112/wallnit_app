<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7sp"
    android:background="@color/backgroundColorDefault"
    tools:context="com.wallnit.wallnitlogin.WallnitUploadUserImage">

    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/editTextBoxColor"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        />

    <ImageView
        android:id="@+id/userprofile_changeupload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/editTextBoxColor"
        android:layout_margin="20sp"
        android:scaleType="centerCrop"
        android:layout_above="@id/emailtxt"
        />

    <EditText
        android:id="@+id/uploadImageOrNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />



</RelativeLayout>
