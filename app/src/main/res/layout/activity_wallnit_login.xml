<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColorDefault"
    tools:context="com.wallnit.wallnitlogin.WallnitLogin">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_login_btn"
        style="@style/signup_title_styles"
        />

    <ImageView
        android:id="@+id/wallnit_icon_login"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="80sp"
        android:layout_below="@id/login_title"
        android:src="@drawable/wallnit_icon"
        />

    <EditText
        android:id="@+id/login_enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallnit_icon_login"
        style="@style/signup_emailedit_text"
        android:ems="12"
        android:singleLine="true"
        android:layout_marginTop="25sp"
        />

    <EditText
        android:id="@+id/login_enter_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_enter_email"
        style="@style/signup_passedit_text"
        android:inputType="textPassword"
        android:ems="12"
        />

    <Button
        android:id="@+id/login_user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_enter_pass"
        style="@style/signup_button"
        android:text="@string/start_login_btn"
        />

    <TextView
        android:id="@+id/forget_password_loginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user_button"
        android:text="@string/forget_password_text"
        style="@style/forget_password_style"
        />

    <TextView
        android:id="@+id/login_gothis_txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_signupuser_text"
        style="@style/signup_asuser_textbottom"
        />

    <TextView
        android:id="@+id/login_gothis_txt_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_signupcircle_text"
        style="@style/signup_ascircle_textbottom"
        />


</RelativeLayout>
