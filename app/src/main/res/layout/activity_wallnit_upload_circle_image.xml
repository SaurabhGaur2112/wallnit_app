<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7sp"
    android:background="@color/backgroundColorDefault"
    tools:context="com.wallnit.wallnitlogin.WallnitUploadCircleImage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/editTextBoxColor"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleprofile_changeupload"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:src="@drawable/post_image_background"
        app:civ_border_width="2sp"
        app:civ_border_color="@color/editTextBoxColor"
        />

    <EditText
        android:id="@+id/uploadImageOrNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/circleprofile_changeupload"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        >

        <TextView
            android:id="@+id/more_Userprofilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            style="@style/profilename_more"
            android:layout_marginTop="20sp"
            />

    </LinearLayout>
</RelativeLayout>
