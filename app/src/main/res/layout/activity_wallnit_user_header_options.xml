<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:id="@+id/userwall_layoutfirst"
    tools:context="com.wallnit.wallnitlogin.WallnitUserHeaderOptions">



        <ImageView
            android:id="@+id/homeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            />

        <ImageView
            android:id="@+id/select_homeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_select_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/notificationicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            />

        <ImageView
            android:id="@+id/notification_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_arrived"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="22sp"
            android:layout_marginTop="3sp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/backgroundicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_background_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            />

        <ImageView
            android:id="@+id/background_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_background_select_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/searchicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            />

        <ImageView
            android:id="@+id/searchicon_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_select_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/moreicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            />

        <ImageView
            android:id="@+id/more_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_select_icon"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:maxHeight="30sp"
            android:visibility="gone"
            />
</LinearLayout>
