<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColorDefault"
    tools:context="com.wallnit.wallnitlogin.ForgetPasswordCircle_StepTwo">

    <TextView
        android:id="@+id/forget_password_steptwo_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continuetxt"
        style="@style/signup_title_styles"
        />

    <ImageView
        android:id="@+id/wallnit_forget_icon_circle"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="80sp"
        android:layout_below="@id/forget_password_steptwo_circle"
        android:src="@drawable/wallnit_icon"
        />

    <TextView
        android:id="@+id/forget_passwordsecond_title_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallnit_forget_icon_circle"
        style="@style/forget_password_title"
        />

    <TextView
        android:id="@+id/forget_password_number_show_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_passwordsecond_title_circle"
        style="@style/forget_password_description"
        />

    <EditText
        android:id="@+id/forget_password_enterverifi_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_password_number_show_circle"
        style="@style/forgetpassword_edittext"
        android:hint="@string/forget_password_step_second"
        android:singleLine="true"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/verification_code_receive_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_password_enterverifi_circle"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/forget_login_first_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_login_btn"
        style="@style/signup_asuser_textbottom"
        />

    <TextView
        android:id="@+id/forget_terms_ofservice_first_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_service"
        style="@style/signup_ascircle_textbottom"
        />

</RelativeLayout>
