<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorDefault"
    android:orientation="vertical"
    tools:context="com.wallnit.wallnitlogin.WallnitUserMoreOption">

    <include layout="@layout/activity_wallnit_user_header_options"/>

    <ImageView
        android:id="@+id/userprofile_imageclick"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:scaleType="centerCrop"
        android:layout_below="@id/userwall_layoutfirst"
        android:background="@color/editTextBoxColor"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        >

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/more_Userprofilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/profilename_more"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/more_userhashtag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/more_hashtagname"
            android:gravity="center"
            />

        </LinearLayout>

        <ListView
            style="@style/horizontal_line_distribute"
            ></ListView>


        <LinearLayout
            android:id="@+id/more_accountsetting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp"
            >

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="12sp"
                android:src="@drawable/ic_account_setting_icon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17sp"
                android:text="Account Setting"
                android:textColor="@color/editTextBoxColor"
                android:layout_marginLeft="15sp"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="12sp"
                android:src="@drawable/ic_logout_icon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17sp"
                android:text="Logout"
                android:textColor="@color/editTextBoxColor"
                android:layout_marginLeft="15sp"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/moreoption_emailtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:textColor="@color/editTextBoxColor"
            />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
