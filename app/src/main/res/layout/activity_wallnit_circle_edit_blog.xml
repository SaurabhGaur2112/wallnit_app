<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7sp"
    tools:context="com.wallnit.wallnitlogin.WallnitCircleEditBlog">

    <EditText
        android:id="@+id/blogtitle_post_circle_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/editTextBoxColor"
        style="@style/blogpost_title"
        android:hint="@string/bloghintpost"
        android:padding="3sp"
        />

    <EditText
        android:id="@+id/circle_edit_blogpostbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/upload_postblog"
        style="@style/upload_textboxpost"
        android:background="@color/editTextBoxColor"
        android:layout_below="@id/blogtitle_post_circle_edit"
        android:layout_marginTop="5sp"
        android:padding="3sp"
        />
</RelativeLayout>
