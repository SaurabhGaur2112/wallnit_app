<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/other_userpostcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <!-- user profile text post start -->
        <LinearLayout
            android:id="@+id/other_userprofile_textpost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/other_userprofile_textpost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/editTextBoxColor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/editTextBoxColor"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:src="@drawable/ic_postlike_icon"
                        android:layout_marginTop="3sp"
                        />

                    <TextView
                        android:id="@+id/other_profile_textpost_totallike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="3sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/other_userprofile_edittext_postunlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postunlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_edittext_postlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_edittext_postcomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postcomment_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_edittext_postreport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postreport_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- user profile text post end -->

        <!-- user profile blog post start -->
        <LinearLayout
            android:id="@+id/other_userprofile_blogpost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/other_userprofile_blog_titlepost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_service_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/other_userprofile_blog_writingpost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_service_color"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/editTextBoxColor"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:src="@drawable/ic_postlike_icon"
                        android:layout_marginTop="3sp"
                        />

                    <TextView
                        android:id="@+id/other_profile_blogpost_totallike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:layout_marginTop="3sp"
                        android:layout_marginLeft="5sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >

                    <ImageView
                        android:id="@+id/other_userprofile_editblog_postunlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postunlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editblog_postlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editblog_postcomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postcomment_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />


                    <ImageView
                        android:id="@+id/other_userprofile_editblog_postreport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postreport_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- user profile blog post end -->

        <!-- user profile link post start -->
        <LinearLayout
            android:id="@+id/other_userprofile_linkpost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/other_userprofile_link_linkpost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/userpost_link"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/other_userprofile_link_linkdescriptionpost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_service_color"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/editTextBoxColor"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:src="@drawable/ic_postlike_icon"
                        android:layout_marginTop="3sp"
                        />

                    <TextView
                        android:id="@+id/other_profile_linkpost_totallike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:layout_marginTop="3sp"
                        android:layout_marginLeft="5sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >

                    <ImageView
                        android:id="@+id/other_userprofile_editlink_postunlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postunlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editlink_postlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editlink_postcomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postcomment_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editlink_postreport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postreport_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- user profile link post end -->

        <!-- user profile photos post start -->
        <LinearLayout
            android:id="@+id/other_userprofile_photospost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:orientation="vertical"
                >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxfirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxsecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxthird"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxfourth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxfifth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxsixth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxseventh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxeighth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxninth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/other_userprofile_photospost_writeboxtenth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBoxColor"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/other_userprofile_photos_captionpost_writebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextBoxColor"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_service_color"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/editTextBoxColor"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:src="@drawable/ic_postlike_icon"
                        android:layout_marginTop="3sp"
                        />


                    <TextView
                        android:id="@+id/other_profile_photospost_totallike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="3sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >

                    <ImageView
                        android:id="@+id/other_userprofile_editphotos_postunlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postunlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editphotos_postlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postlike_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/other_userprofile_editphotos_postcomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postcomment_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />


                    <ImageView
                        android:id="@+id/other_userprofile_editphotos_postreport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_postreport_icon"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:maxHeight="30sp"
                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- user profile photos post end -->

    </android.support.v7.widget.CardView>

</LinearLayout>